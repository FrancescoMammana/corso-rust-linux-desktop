{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve (Python 3)",
            "type": "shell",
            "command": "python3 -m http.server 8080",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": {
                "owner": "custom",
                "pattern": [
                    {
                        "regexp": "^(.*)$",
                        "message": 1
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^",
                    "endsPattern": "Serving HTTP on"
                }
            }
        }
    ]
}
